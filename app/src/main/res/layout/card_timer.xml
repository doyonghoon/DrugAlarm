<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/card_timer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="0dp">

      <TextView
          android:id="@+id/card_timer_alarm"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/card_text_remaining_minutes"
          android:textSize="16sp"
          android:textColor="@color/secondary_text"
          android:singleLine="true"/>

      <TextView
          android:id="@+id/card_timer_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:textSize="24sp"
          android:textColor="@android:color/black"/>

      <TextView
          android:id="@+id/card_timer_fixed_minutes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="@string/card_text_template_fixed_minutes"
          android:textSize="16sp"
          android:singleLine="true"
          android:textColor="@color/secondary_text"/>

      <TextView
          android:id="@+id/card_timer_repeat_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/card_text_repeated_count"
          android:textSize="16sp"
          android:singleLine="true"
          android:textColor="@color/secondary_text"/>
    </LinearLayout>

    <TextView
        android:id="@+id/card_timer_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_timer_layout"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/refresh"
        android:textColor="@android:color/black"
        android:background="@drawable/bg_refresh"/>

    <ImageView
        android:id="@+id/card_timer_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:tint="@color/secondary_text"
        android:src="@mipmap/ic_more_vert_black_24dp"/>
  </RelativeLayout>

</android.support.v7.widget.CardView>