<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp">

  <LinearLayout
      android:id="@+id/card_timer_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingLeft="8dp"
      android:paddingTop="16dp"
      android:paddingRight="8dp"
      android:paddingBottom="24dp"
      android:background="@android:color/white">

    <TextView
        android:id="@+id/card_timer_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_text_remaining_minutes"
        android:textSize="16sp"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/card_timer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/card_timer_fixed_minutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/card_text_template_fixed_minutes"
        android:textSize="16sp"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/card_timer_repeat_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_text_repeated_count"
        android:textSize="16sp"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/card_timer_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:text="@string/refresh"
        android:textColor="@android:color/black"
        android:background="@drawable/bg_refresh"/>

  </LinearLayout>

</android.support.v7.widget.CardView>